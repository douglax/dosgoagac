<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ElectroFacBOPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>com.agac.bo.Emisor</class>
    <class>com.agac.bo.UbicacionFiscal</class>
    <class>com.agac.bo.Ubicacion</class>
    <class>com.agac.bo.Receptor</class>
    <class>com.agac.bo.Comprobante</class>
    <class>com.agac.bo.Concepto</class>
    <class>com.agac.bo.InformacionAduanera</class>
    <class>com.agac.bo.Parte</class>
    <class>com.agac.bo.CuentaPredial</class>
    <properties>
      <property name="toplink.jdbc.user" value=""/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:derby:efactura;create=true"/>
      <property name="toplink.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
